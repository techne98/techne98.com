<article class="prose-content">
    <slot />
</article>

<style>
    .prose-content {
        --tw-prose-body: rgb(229 231 235);
        --tw-prose-headings: rgb(243 244 246);
        --tw-prose-links: rgb(249 115 22);
        --tw-prose-code: rgb(239 68 68);
    }

    .prose-content :global(p) {
        font-size: 1.125rem;
        color: var(--tw-prose-body);
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .prose-content :global(h1) {
        font-size: 2rem;
        font-weight: 700;
        color: var(--tw-prose-headings);
        margin-top: 2.5rem;
        margin-bottom: 1.5rem;
    }

    .prose-content :global(h2) {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--tw-prose-headings);
        margin-top: 2rem;
        margin-bottom: 1.25rem;
    }

    .prose-content :global(h3) {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--tw-prose-headings);
        margin-top: 1.5rem;
        margin-bottom: 1rem;
    }

    .prose-content :global(a) {
        color: var(--tw-prose-links);
        text-decoration: underline;
        font-weight: 500;
        transition: opacity 0.2s ease;
    }

    .prose-content :global(a:hover) {
        opacity: 0.8;
    }

    .prose-content :global(ul),
    .prose-content :global(ol) {
        font-size: 1.125rem;
        color: var(--tw-prose-body);
        margin: 1rem 0 1rem 2rem;
    }

    .prose-content :global(li) {
        margin-bottom: 0.5rem;
    }

    .prose-content :global(code) {
        color: var(--tw-prose-code);
        font-family: monospace;
        font-size: 0.95rem;
        padding: 0.125rem 0.375rem;
        background-color: rgba(0 0 0 / 0.3);
        border-radius: 0.25rem;
    }

    .prose-content :global(pre) {
        background-color: rgb(23 23 23);
        padding: 1rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin: 1rem 0;
    }

    .prose-content :global(pre code) {
        background-color: transparent;
        padding: 0;
        color: rgb(229 231 235);
    }

    .prose-content :global(blockquote) {
        border-left: 3px solid #5B5DFF;
        padding-left: 1rem;
        color: rgb(156 163 175);
        font-style: italic;
    }

    .prose-content :global(img) {
        border-radius: 0.375rem;
        margin: 1rem 0;
    }

    .prose-content :global(strong) {
        font-weight: 600;
        color: rgb(243 244 246);
    }
</style>
