---
import Footer from "../organisms/Footer.astro";
---

<div class="sidebar">
    <div class="hero">
        <img class="pfp" src="/15.png" />
        <h1>techne98</h1>
        <p>web, tooling, systems</p>
    </div>
    <hr />
    <nav>
        <a href="/">Home</a>
        <a href="/blog">Posts</a>
        <a href="/notes">Notes</a>
        <a href="/about">About</a>
    </nav>
    <hr />
    <Footer />
</div>

<style>
    .sidebar {
        display: none;
    }

    @media screen and (min-width: 768px) {
        nav {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .sidebar {
            background-color: #212121;
            width: 350px;
            position: sticky;
            top: 0;
            height: 100vh;
            overflow-y: auto;
            padding: 4rem 2rem;
            display: flex;
            flex-direction: column;
            gap: 2.5rem;
        }

        .hero {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
        }

        .hero h1 {
            font-weight: bold;
        }

        .hero p {
            color: grey;
        }

        .pfp {
            width: 96px;
            height: 96px;
            border-radius: 9999px;
        }
    }
</style>
