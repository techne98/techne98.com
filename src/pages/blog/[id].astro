---
import { getCollection, render } from "astro:content";
import readingTime from "reading-time";
import Layout from "../../layouts/Layout.astro";
import Prose from "../../components/Prose.astro";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({
        params: { id: post.id },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content, headings } = await render(post);

// Calculate reading time from the rendered content
const contentString = await post.body;
const readTime = readingTime(contentString);
---

<Layout pageTitle={post.data.title}>
    <h1 class="text-4xl font-bold mb-4">
        {post.data.title}
    </h1>
    <div class="flex gap-4 text-sm text-neutral-600 mb-8 font-mono">
        <span>{post.data.date.toLocaleDateString()}</span>
        <span>{readTime.text}</span>
    </div>
    <Prose>
        <Content />
    </Prose>
</Layout>
